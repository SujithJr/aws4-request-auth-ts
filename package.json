{
	"name": "@sujith/aws4-request-auth-js",
	"version": "0.0.1",
	"author": "Sujithkumar Sundaran <hi@iamsujith.in> (https://iamsujith.in)",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SujithJr/aws4-request-auth-js.git"
	},
	"main": "dist/index.js",
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.17.0",
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "^2.27.10",
		"@types/node": "^22.9.3",
		"typescript": "^5.7.2"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.cs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"bugs": {
		"url": "https://github.com/SujithJr/aws4-request-auth-js/issues"
	},
	"description": "A javascript package to authenticate requests with aws4 signature.",
	"files": ["dist"],
	"homepage": "https://github.com/SujithJr/aws4-request-auth-js",
	"keywords": ["aws", "aws signature", "aws authenticate"],
	"license": "MIT",
	"type": "module",
	"scripts": {
        "type-lint": "tsc",
		"check-exports": "attw --pack .",
		"format": "biome format --write .",
		"check-format": "biome check --write .",
		"lint": "bun run type-lint && biome lint --write .",
		"build": "rm -rf dist && bun run type-lint && bun run check-format && tsup",
		"ci": "rm -rf dist && bun run type-lint && bun run build && bun run check-format && bun run check-exports"
	}
}
